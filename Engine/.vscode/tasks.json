{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Tech Titan Engine",
            "type": "shell",
            "command": "${workspaceFolder}\\compile.bat",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}
